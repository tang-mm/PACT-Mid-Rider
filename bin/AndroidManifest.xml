<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gamewithsoundandmenu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permisson.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.gamewithsoundandmenu.MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
         -
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".BackgroundService"
            android:enabled="true" />

        <activity
            android:name="com.example.gamewithsoundandmenu.NewGameActivity"
            android:label="@string/title_activity_new_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.javacode.Game"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.gamewithsoundandmenu.Pause"
            android:label="@string/title_activity_pause"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.javacode.BlindTestActivity"
            android:label="@+string/title_activity_main"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.javacode.Test4Activity"
            android:label="@+string/title_example"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.gamewithsoundandmenu.SettingsMenuActivity"
            android:label="@string/title_activity_new_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.gamewithsoundandmenu.HelpActivity"
            android:label="@string/title_activity_new_game"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>